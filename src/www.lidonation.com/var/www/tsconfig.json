{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "incremental": true,
        "moduleResolution": "node",
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["es7","dom"],
        "types": [
            "@types/node",
            "@types/ziggy-js"
        ],
        "paths": {
            "@/*": ["./resources/js/*"],
            "@apps/*": ["./resources/js/apps/*"]
        },
        "outDir": "./public/build/assets"
    },
    "typeRoots": ["./node_modules/@types", "resources/js/types"],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
}
